<%= simple_form_for @film do |f| %>
  <%= f.input :name, label: 'Tên phim', input_html: { class: "mb-2 mr-sm-2" } %>
  <%= f.input :country_id, as: :select, collection: Country.all.map{ |a| [a.id, a.name] }, label_method: :second, value_method: :first %>
  <%= f.input :description, label: 'Mô tả', input_html: { class: "mb-2 mr-sm-2" } %>
  <%= f.input :url, label: 'url', input_html: { class: "mb-2 mr-sm-2" } %>
  <%= f.input :image, as: :file, label: 'Ảnh', input_html: { class: "mb-2 mr-sm-2" } %>
  <%= f.button :submit, class: "btn-primary mb-2" %>
<% end %>
