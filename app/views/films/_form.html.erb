<%= simple_form_for @film do |f| %>
  <%= f.error_notification %>
  <%= f.input :name, label: 'Tên phim' %>
  <%= f.input :country_id, as: :select, collection: Country.all.map{ |a| [a.name, a.id] }, label: "Quốc gia", include_blank: false %>
  <%= f.input :category_ids, as: :check_boxes, collection: Category.all.map{ |a| [a.name, a.id] }, label: "Thể loại" %>
  <%= f.input :film_type, as: :select, collection: Film::FILM_TYPES.map{ |a| [t(a), a] }, label: "Loại phim", include_blank: false %>
  <%= f.input :year_release, label: 'Năm ra mắt' %>
  <%= f.input :running_time, label: 'Thời lượng hoặc số tập' %>
  <%= f.input :quanlity, as: :select, collection: Film::QUANLITY_TYPES.map{ |a| [a, a] }, label: 'Chất lượng', include_blank: false %>
  <%= f.input :rate, label: 'Đánh giá' %>
  <%= f.input :min_age, label: 'Độ tuổi tối thiểu' %>
  <%= f.input :description, label: 'Mô tả' %>
  <%= f.input :url, label: 'url' %>
  <%= f.input :image, as: :file, label: 'Ảnh' %>
  <%= f.button :submit, class: "btn-primary" %>
<% end %>
