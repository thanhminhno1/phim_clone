<%= simple_form_for @film do |f| %>
  <%= f.error_notification %>
  <%= f.input :name, label: 'Tên phim' %>
  <%= f.input :country_id, as: :select, collection: Country.all.map{ |a| [a.name, a.id] }, label: "Quốc gia", include_blank: false %>
  <%= f.simple_fields_for :category_films do |a| %>
    <%= a.input :category_id, as: :check_boxes, collection: Category.all.map{ |a| [a.name, a.id] }, label: "Thể loại" %>
  <% end %>
  <%= f.input :description, label: 'Mô tả' %>
  <%= f.input :url, label: 'url' %>
  <%= f.input :image, as: :file, label: 'Ảnh' %>
  <%= f.button :submit, class: "btn-primary" %>
<% end %>
