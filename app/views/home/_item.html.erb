<div class="col-6 col-sm-4 col-lg-3 col-xl-2">
  <div class="card">
    <div class="card__cover card__cover--max-width">
      <%= image_tag film.image %>
      <%= link_to home_path(film), class: "card__play" do%>
        <i class="fa fa-play"></i>
      <% end %>
    </div>
    <div class="card__content">
      <h3 class="card__title"><a href="#"><%= film.name %></a></h3>
      <span class="card__category">
        <a href="#">Action</a>
        <a href="#">Triler</a>
      </span>
      <span class="card__rate"><i class="fa fa-star"></i>8.4</span>
    </div>
  </div>
</div>
